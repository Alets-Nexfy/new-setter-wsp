{
  "name": "whatsapp-api-v2",
  "version": "1.0.0",
  "description": "WhatsApp Integration API v2 - Modular and Scalable Architecture",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --require tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "worker:whatsapp": "ts-node src/workers/whatsapp-worker/index.ts",
    "worker:instagram": "ts-node src/workers/instagram-worker/index.ts",
    "start:whatsapp-only": "cross-env ENABLE_WHATSAPP=true ENABLE_INSTAGRAM=false npm run dev",
    "start:instagram-only": "cross-env ENABLE_WHATSAPP=false ENABLE_INSTAGRAM=true npm run dev",
    "start:both": "cross-env ENABLE_WHATSAPP=true ENABLE_INSTAGRAM=true npm run dev",
    "deploy:whatsapp": "cross-env PLATFORM=whatsapp npm run build && npm start",
    "deploy:instagram": "cross-env PLATFORM=instagram npm run build && npm start",
    "deploy:both": "cross-env PLATFORM=both npm run build && npm start",
    "test:whatsapp": "node scripts/test-whatsapp.js",
    "dev:whatsapp": "cross-env ENABLE_WHATSAPP=true ENABLE_INSTAGRAM=false LOG_LEVEL=debug npm run dev",
    "dev:logs": "powershell Get-Content logs/app.log -Wait",
    "setup:test": "powershell -Command \"New-Item -ItemType Directory -Force -Path logs, config\"",
    "backup:firebase": "ts-node scripts/firebase-backup.ts",
    "validate:backup": "ts-node scripts/backup-validator.ts",
    "migrate:schema": "ts-node scripts/supabase-schema-migrator.ts",
    "migrate:data": "ts-node scripts/run-data-migration.ts",
    "test:supabase-connection": "ts-node scripts/test-supabase-connection.ts",
    "test:supabase-flow": "ts-node scripts/test-supabase-flow.ts"
  },
  "keywords": [
    "whatsapp",
    "instagram",
    "api",
    "chatbot",
    "ai",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.53.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^24.14.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.31.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
